<%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li>
                    <%= full_message %>
                </li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="panel panel-default">
        <div class="panel-heading">
            投稿
        </div>
        
        <div class="panel-body">
            
            <div class="form-group">
                <label>投稿者名</label>
                <%= f.text_area :name ,class: "form-control",:size=>"60x1" %>
            </div>
            <div class="form-group">           
                <label>年齢</label>
                <%= f.text_area :age ,class: "form-control",:size=>"30x1" %>
            </div>    
            
            <div class="form-group">           
                <label>内容</label>
                <%= f.text_area :body ,class: "form-control",:size=>"60x10" %>
            </div>
            
            <%= f.submit "投稿",class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>