
<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span> 
             <%= message.body %>
          <br>
        <% end %>
    </div>
</div>


<%= form_for(@message) do |f| %>
    <div class="panel panel-default">
        <div class="panel-heading">
            投稿
        </div>
        
        <div class="panel-body">
            
            <div class="form-group">
                <label>投稿者名</label>
                <%= f.text_area :name ,class: "form-control",:size=>"60x1" %>
            </div>
            <div class="form-group">           
                <label>内容</label>
                <%= f.text_area :body ,class: "form-control",:size=>"60x10" %>
            </div>        
            <%= button_tag "投稿" %>
        </div>
    </div>
<% end %>
